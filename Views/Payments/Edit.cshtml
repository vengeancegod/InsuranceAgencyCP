@model InsuranceAgency__.Models.Payment

@{
    ViewData["Title"] = "Edit";
}

<h1>Правка данных об оплате</h1>

<h4>Данные об оплате</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label">Идентификатор оплаты</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiptNumber" class="control-label">Номер квитанции</label>
                <input asp-for="ReceiptNumber" class="form-control" />
                <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FIO" class="control-label">ФИО плательщика</label>
                <input asp-for="FIO" class="form-control" />
                <span asp-validation-for="FIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePayment" class="control-label">Дата оплаты</label>
                <input asp-for="DatePayment" class="form-control" />
                <span asp-validation-for="DatePayment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Идентификатор клиента</label>
                <input asp-for="ClientId" class="form-control" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" onclick=" alert('Данные успешно изменены!')" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="\Home\Index">Вернуться назад</a>
</div>

