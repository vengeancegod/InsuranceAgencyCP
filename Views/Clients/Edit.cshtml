@model InsuranceAgency__.Models.Client

@{
    ViewData["Title"] = "Edit";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <main>
        <h1>Правка данных клиента</h1>

        <h4>Клиент</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="TypeClient" class="control-label">Тип киента</label>
                        <input asp-for="TypeClient" class="form-control" />
                        <span asp-validation-for="TypeClient" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FIO" class="control-label">ФИО</label>
                        <input asp-for="FIO" class="form-control" />
                        <span asp-validation-for="FIO" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PassportSeries" class="control-label">Серия паспорта</label>
                        <input asp-for="PassportSeries" class="form-control" />
                        <span asp-validation-for="PassportSeries" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PassportNumber" class="control-label">Номер паспорта</label>
                        <input asp-for="PassportNumber" class="form-control" />
                        <span asp-validation-for="PassportNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PlaceOfResidence" class="control-label">Адрес проживания</label>
                        <input asp-for="PlaceOfResidence" class="form-control" />
                        <span asp-validation-for="PlaceOfResidence" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Изменить" class="btn btn-primary" onclick=" alert('Данные успешно изменены!')"/>
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a href="\Home\Index">Вернуться назад</a>
        </div>
    </main>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</html>