@model InsuranceAgency__.Models.Client

@{
    ViewData["Title"] = "Details";
}
<html>
<head><link rel="stylesheet" href="~/css/site.css" /></head>
<body>
    <main>
        <h1>Детальный просмотр данных клиента</h1>

        <div>
            <h4>Клиент</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Тип клиента
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TypeClient)
                </dd>
                <dt class="col-sm-2">
                    ФИО
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FIO)
                </dd>
                <dt class="col-sm-2">
                    Серия паспорта
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PassportSeries)
                </dd>
                <dt class="col-sm-2">
                    Номер паспорта
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PassportNumber)
                </dd>
                <dt class="col-sm-2">
                    Дата рождени
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-2">
                    Адрес проживания
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PlaceOfResidence)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
            <a href="\Home\Index">Вернуться назад</a>
        </div>
    </main>
</body>
</html>