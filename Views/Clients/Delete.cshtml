@model InsuranceAgency__.Models.Client

@{
    ViewData["Title"] = "Delete";
}
<html>
<head><link rel="stylesheet" href="~/css/site.css" /></head>
<body>
    <main>

        <h1>Удаление клиента</h1>

        <h3>Действительно ли вы хотите удалить клиента ?</h3>
        <div>
            <h4>Client</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Тип клиента
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TypeClient)
                </dd>
                <dt class="col-sm-2">
                    ФИО
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FIO)
                </dd>
                <dt class="col-sm-2">
                    Серия паспорта
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PassportSeries)
                </dd>
                <dt class="col-sm-2">
                    Номер паспорта
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PassportNumber)
                </dd>
                <dt class="col-sm-2">
                    Дата рождения
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-2">
                    Адрес проживания
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PlaceOfResidence)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" onclick=" alert('Клиент успешно удалён!')"/> |
                <a href="\Home\Index">Вернуться назад</a>
            </form>
        </div>
    </main>
</body>
</html>