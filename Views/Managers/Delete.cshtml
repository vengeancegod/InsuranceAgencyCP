@model InsuranceAgency__.Models.Manager

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление менеджера</h1>

<h3>Действительно ли вы хотите удалить менеджера ?</h3>
<div>
    <h4>Менеджер</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ФИО
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FIO)
        </dd>
        <dt class = "col-sm-2">
            Дата рождения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            Возраст
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" onclick=" alert('Менеджер успешно удалён!')"/> |
        <a href="\Home\Index">Вернуться назад</a>
    </form>
</div>
